(role red)
(role blue)

(init (control red))
(init (pieces red 0))
(init (pieces blue 0))

(<= (legal red noop)
    (true (control blue)))
(<= (legal red (move ?x ?n))
    (true (control red))
    (emptyCell ?x ?n))
(<= (legal blue noop)
    (true (control red)))
(<= (legal blue (move ?x ?n))
    (true (control blue))
    (emptyCell ?x ?n))

(<= (next (mark ?x ?n red))
    (does red (move ?x ?n)))
(<= (next (mark ?x ?n blue))
    (does blue (move ?x ?n)))
(<= (next (mark ?x ?n ?mark))
    (true (mark ?x ?n ?mark)))

(<= (next (pieces red ?newCount))
    (true (pieces red ?count))
    (does red (move ?x ?n))
    (succ ?count ?newCount))
(<= (next (pieces blue ?newCount))
    (true (pieces blue ?count))
    (does blue (move ?x ?n))
    (succ ?count ?newCount))
(<= (next (pieces red ?count))
    (true (pieces red ?count))
    (does blue (move ?x ?n)))
(<= (next (pieces blue ?count))
    (true (pieces blue ?count))
    (does red (move ?x ?n)))

(<= (next (control red))
    (true (control blue))
    (not (adjacentOpposing ?x ?n blue)))
(<= (next (control blue))
    (true (control red))
    (not (adjacentOpposing ?x ?n red)))
(<= (next (control ?player))
    (true (control ?player))
    (adjacentOpposing ?x ?n ?player))

(<= terminal
    (true (pieces red 19)))
(<= terminal
    (true (pieces blue 19)))

(<= (goal red 100)
    (true (pieces red 19)))
(<= (goal red 0)
    (true (pieces blue 19)))
(<= (goal blue 100)
    (true (pieces blue 19)))
(<= (goal blue 0)
    (true (pieces red 19)))

(<= (adjacentOpposing ?x ?n red)
    (adjacent ?x ?n ?x2 ?n2)
    (true (mark ?x2 ?n2 blue)))
(<= (adjacentOpposing ?x ?n blue)
    (adjacent ?x ?n ?x2 ?n2)
    (true (mark ?x2 ?n2 red)))

(<= (emptyCell ?x ?n)
    (not (true (mark ?x ?n red)))
    (not (true (mark ?x ?n blue))))

