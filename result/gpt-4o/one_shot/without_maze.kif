(role robot)

(location a)
(location b)
(location c)
(location d)
(location i) ; special location for gold when held

(adjacent a b)
(adjacent b c)
(adjacent c d)
(adjacent d a)
(adjacent b a)
(adjacent c b)
(adjacent d c)
(adjacent a d)

(init (robot-at a))
(init (gold-at c))
(init (step 1))

(<= (legal robot (move ?from ?to))
    (true (robot-at ?from))
    (adjacent ?from ?to))
(<= (legal robot grab)
    (true (robot-at ?loc))
    (true (gold-at ?loc)))
(<= (legal robot drop)
    (true (robot-at ?loc))
    (true (gold-at i)))
(<= (legal robot noop)
    (not (legal robot (move ?from ?to)))
    (not (legal robot grab))
    (not (legal robot drop)))

(<= (next (robot-at ?to))
    (does robot (move ?from ?to)))
(<= (next (robot-at ?loc))
    (true (robot-at ?loc))
    (not (does robot (move ?loc ?to))))
(<= (next (gold-at i))
    (does robot grab))
(<= (next (gold-at ?loc))
    (does robot drop)
    (true (robot-at ?loc)))
(<= (next (gold-at ?loc))
    (true (gold-at ?loc))
    (not (does robot grab))
    (not (does robot drop)))
(<= (next (step ?next))
    (true (step ?current))
    (succ ?current ?next))

(<= terminal
    (true (step 10)))
(<= terminal
    (true (gold-at a)))

(<= (goal robot 100)
    (true (gold-at a)))
(<= (goal robot 0)
    (not (true (gold-at a)))
    terminal)

