(<= (underAttack ?x ?y)
    (queen ?qx ?qy)
    (or (sameRow ?qx ?x)
        (sameCol ?qy ?y)
        (sameDiag ?qx ?qy ?x ?y)))

(<= (sameRow ?qx ?x)
    (index ?qx)
    (index ?x)
    (true (queen ?qx ?y))
    (true (queen ?x ?y)))

(<= (sameCol ?qy ?y)
    (index ?qy)
    (index ?y)
    (true (queen ?x ?qy))
    (true (queen ?x ?y)))

(<= (sameDiag ?qx ?qy ?x ?y)
    (index ?qx)
    (index ?qy)
    (index ?x)
    (index ?y)
    (or (plus ?qx ?qy ?x ?y)
        (plus ?qx ?y ?x ?qy)))

(<= (plus ?a ?b ?c ?d)
    (succ ?a ?b)
    (succ ?c ?d))

(<= (emptyCell ?x ?y)
    (index ?x)
    (index ?y)
    (not (true (queen ?x ?y))))