(role white)
(role black)

(init (cell 1 1 b))
(init (cell 1 2 b))
(init (cell 1 3 b))
(init (cell 2 1 b))
(init (cell 2 2 b))
(init (cell 2 3 b))
(init (cell 3 1 b))
(init (cell 3 2 b))
(init (cell 3 3 b))
(init (control white))

(index 1)
(index 2)
(index 3)

(marker b)
(marker x)
(marker o)

(<= (legal ?player (mark ?x ?y))
    (role ?player)
    (true (control ?player))
    (index ?x)
    (index ?y)
    (true (cell ?x ?y b)))

(<= (legal white noop)
    (true (control black)))

(<= (legal black noop)
    (true (control white)))

(<= (next (cell ?x ?y x))
    (does white (mark ?x ?y))
    (true (cell ?x ?y b)))

(<= (next (cell ?x ?y o))
    (does black (mark ?x ?y))
    (true (cell ?x ?y b)))

(<= (next (cell ?x ?y ?marker))
    (true (cell ?x ?y ?marker))
    (distinct ?marker b))

(<= (next (control black))
    (true (control white)))

(<= (next (control white))
    (true (control black)))

(<= (line ?player ?marker)
    (role ?player)
    (marker ?marker)
    (or (and (true (cell 1 1 ?marker)) (true (cell 1 2 ?marker)) (true (cell 1 3 ?marker)))
        (and (true (cell 2 1 ?marker)) (true (cell 2 2 ?marker)) (true (cell 2 3 ?marker)))
        (and (true (cell 3 1 ?marker)) (true (cell 3 2 ?marker)) (true (cell 3 3 ?marker)))
        (and (true (cell 1 1 ?marker)) (true (cell 2 1 ?marker)) (true (cell 3 1 ?marker)))
        (and (true (cell 1 2 ?marker)) (true (cell 2 2 ?marker)) (true (cell 3 2 ?marker)))
        (and (true (cell 1 3 ?marker)) (true (cell 2 3 ?marker)) (true (cell 3 3 ?marker)))
        (and (true (cell 1 1 ?marker)) (true (cell 2 2 ?marker)) (true (cell 3 3 ?marker)))
        (and (true (cell 1 3 ?marker)) (true (cell 2 2 ?marker)) (true (cell 3 1 ?marker)))))

(<= (terminal)
    (or (line white x)
        (line black o)
        (not (true (cell ?x ?y b)))))

(<= (goal white 100)
    (line white x))

(<= (goal black 0)
    (line white x))

(<= (goal black 100)
    (line black o))

(<= (goal white 0)
    (line black o))

(<= (goal white 50)
    (not (line white x))
    (not (line black o))
    (not (true (cell ?x ?y b))))

(<= (goal black 50)
    (not (line white x))
    (not (line black o))
    (not (true (cell ?x ?y b))))