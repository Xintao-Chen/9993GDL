    (distinct X X1)
    (distinct Y Y1)
    (or (sum X Y X1 Y1)
        (diff X Y X1 Y1)))

(<= (sum X Y X1 Y1)
    (succ X X1)
    (succ Y Y1))

(<= (diff X Y X1 Y1)
