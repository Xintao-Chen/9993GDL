(role player)

(init (pos1 a))
(init (pos2 x))

(conn1 a b)
(conn1 b c)

(conn2 x y)
(conn2 y z)

(<= (legal player (move1 ?target))
    (true (pos1 ?current))
    (conn1 ?current ?target))

(<= (legal player (move2 ?target))
    (true (pos2 ?current))
    (conn2 ?current ?target))

(<= (next (pos1 ?target))
    (does player (move1 ?target)))

(<= (next (pos2 ?target))
    (does player (move2 ?target)))

(<= terminal
    (true (pos1 c))
    (true (pos2 z)))

(<= (goal player 100)
    (true (pos1 c))
    (true (pos2 z)))

(<= (goal player 0)
    (not (and (true (pos1 c)) (true (pos2 z)))))