(correctcount 0 0)
(<= (correctcount ?next ?np5)
    (csuc ?prev ?next)
    (correct ?next)
    (correctcount ?prev ?n)
    (plus5 ?n ?np5))
(<= (correctcount ?next ?n)
    (csuc ?prev ?next)
    (not (correct ?next))
    (correctcount ?prev ?n))
(<= (totalcorrect ?n)
    (correctcount gr ?n))

