;; LEGAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (legal robot (turn ?dir 90))
    (move ?dir))
(<= (legal robot (turn ?dir 180))
    (move ?dir))
